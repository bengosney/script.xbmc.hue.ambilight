<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.xbmc.hue.ambilight" name="XBMC Philips Hue" version="0.1.0" provider-name="Ben Gosney">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.requests"/>
  </requires>
  <extension point="xbmc.service" library="default.py"></extension>
  <extension point="xbmc.addon.metadata">
    <summary>XBMC controlled Super Legend lights</summary>
    <description>Let XBMC control your Super Legend lights. Automatically dims and un-dims them when playback starts. Based on the XBMC Hue plugin by Cees Elzinga</description>
    <platform>all</platform>
  </extension>
</addon>
